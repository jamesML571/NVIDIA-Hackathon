# NVIDIA NIM API Configuration
NVIDIA_API_KEY=your_nvidia_api_key_here
NVIDIA_BASE_URL=https://integrate.api.nvidia.com/v1

# Model Endpoints
# Language Model - NVIDIA Nemotron (hackathon featured model)
NEMOTRON_MODEL=nvidia/nemotron-4-340b-instruct
# Alternative faster model
LLAMA_MODEL=meta/llama-3.1-70b-instruct

# Vision Models
VISION_MODEL=nvidia/nv-embedqa-e5-v5
KOSMOS_MODEL=microsoft/kosmos-2

# Server Configuration
PORT=8000
HOST=0.0.0.0
ENVIRONMENT=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Optional: For URL screenshot capture
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser